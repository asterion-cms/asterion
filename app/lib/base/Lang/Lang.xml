<object>
    <name>Lang</name>
    <info>
        <sql>
            <primary>idLang</primary>
            <label>name</label>
            <order>true</order>
        </sql>
        <form>
            <title>langs</title>
            <label>#name</label>
            <orderBy>ord</orderBy>
            <hiddenAdminMenu>true</hiddenAdminMenu>
            <templateItemAdmin>
                <p class="accent"><strong>#name</strong></p>
                <p class="tiny"><em>_code</em> : <span class="mainAlt">#idLang</span></p>
            </templateItemAdmin>
        </form>
    </info>
    <attributes>
        <attribute>
            <name>idLang</name>
            <type>id-varchar</type>
            <label>code</label>
            <required>unique</required>
        </attribute>
        <attribute>
            <name>name</name>
            <label>name</label>
            <type>text</type>
            <required>notEmpty</required>
        </attribute>
    </attributes>
</object>