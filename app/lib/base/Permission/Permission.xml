<object>
    <name>Permission</name>
    <info>
        <sql>
            <primary>idPermission</primary>
        </sql>
        <form>
            <title>permissions</title>
            <hiddenAdminMenu>true</hiddenAdminMenu>
        </form>        
    </info>
    <attributes>
        <attribute>
            <name>idPermission</name>
            <type>id-autoincrement</type>
        </attribute>
        <attribute>
            <name>idUserType</name>
            <label>userType</label>
            <type>select</type>
            <refObject>UserType</refObject>
        </attribute>
        <attribute>
            <name>objectName</name>
            <label>objectName</label>
            <type>text</type>
            <required>notEmpty</required>
        </attribute>
        <attribute>
            <name>permissionListAdmin</name>
            <label>permissionListAdmin</label>
            <type>checkbox</type>
        </attribute>
        <attribute>
            <name>permissionInsert</name>
            <label>permissionInsert</label>
            <type>checkbox</type>
        </attribute>
        <attribute>
            <name>permissionModify</name>
            <label>permissionModify</label>
            <type>checkbox</type>
        </attribute>
        <attribute>
            <name>permissionDelete</name>
            <label>permissionDelete</label>
            <type>checkbox</type>
        </attribute>
    </attributes>
</object>